%h2 パスワードを変更する
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: "新しいパスワード", required: true, autofocus: true, hint: ("最低#{@minimum_password_length}文字" if @minimum_password_length)
    = f.input :password_confirmation, label: "新しいパスワードの再入力", required: true
  .form-actions
    = f.button :submit, "パスワードを変更する", class: "btn-primary"
= render "devise/shared/links"
