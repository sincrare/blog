= form_for [:admin, @authority] do |f|
  - if @authority.errors.any?
    #error_explanation
      %h2= "#{pluralize(@authority.errors.count, "error")} prohibited this authority from being saved:"
      %ul
        - @authority.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
